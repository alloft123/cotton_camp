/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
    <div class="col-left sidebar">
<div class="m-cotton mb-mana-catalog-leftnav">
 <div class="cotton cotton-refine-by">
        <div class="cotton-refine_updated">
          <?php echo $this->__('Refine By') ?>
        </div>
        <div class="cotton-content">
        <?php echo $this->getStateHtml() ?>
        <?php if($this->canShowOptions()): ?>
            <div class="narrow-by">
              <dl id="narrow-by-list">
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
				<?php if($_filter->getName() != "Category"){ ?>
                <dt class="cotton-subtitle"><?php echo $this->__($_filter->getName()) ?></dt>
                <dd class="layered_Color">
                <?php echo $_filter->getHtml() ?>
                </dd>
                <?php } endif; ?>
                <?php endforeach; ?>
            </dl>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
            </div>
            <?php endif; ?>
        </div>
	</div>
	</div>
    </div>
<?php endif; ?>
